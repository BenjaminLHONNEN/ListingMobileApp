<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Listings.Views.CreateArticleWindow">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Titre de l'annonce"/>
            <Entry Text="{Binding Article.Title}" Keyboard="Text"></Entry>
            <Label Text="Prix"/>
            <Entry Text="{Binding Article.Price}" Keyboard="Numeric"></Entry>
            <Label Text="Description"/>
            <Entry Text="{Binding Article.Content}" Keyboard="Chat"></Entry>
            <Button Text="Ajouter" Command="{Binding AddArticle}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>